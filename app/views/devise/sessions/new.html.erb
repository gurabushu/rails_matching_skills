<div class="auth-container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "ログイン状態を保持する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

  <!-- ゲストログインボタン -->
  <div class="guest-login-section">
    <p>または</p>
    <%= button_to "ゲストログイン", users_guest_sign_in_path, method: :post, 
                  class: "btn btn-secondary" %>
    <small>※ゲストログインでは登録不要で機能をお試しいただけます</small>
  </div>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
