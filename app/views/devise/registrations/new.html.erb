<div class="auth-container">
  <h2>新規ユーザー登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autocomplete: "email", required: true %>
    </div>

    <div class="field">
      <%= f.label :skill, "スキル" %><br />
      <%= f.text_field :skill, placeholder: "例: Ruby on Rails, JavaScript, デザイン", required: true %>
    </div>

    <div class="field">
      <%= f.label :description, "自己紹介（任意）" %><br />
      <%= f.text_area :description, rows: 4, placeholder: "あなたのスキルや経験について簡単に教えてください" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em><%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <!-- ゲストログインセクション -->
  <div class="guest-login-section">
    <p>または</p>
    <%= button_to "ゲストログイン", users_guest_sign_in_path, method: :post, 
                  class: "btn btn-secondary" %>
    <small>※ゲストログインでは登録不要で機能をお試しいただけます</small>
  </div>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
